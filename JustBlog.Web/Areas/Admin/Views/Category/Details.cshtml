@{
}

@model CategoryDetailsViewModel

<div class="container ps-lg-2 pt-lg-2">
    <h3>Category details</h3>
    <div class="row">
        <p><b>Id:</b> @Model.Id</p>
    </div>
    <div class="row">
        <p><b>Name:</b> @Model.Name</p>
    </div>
    <div class="row">
        <p><b>Slug:</b> @Model.UrlSlug</p>
    </div>
    <div class="row">
        <p><b>Description:</b> @Html.Raw(Model.Description)</p>
    </div>
    <div class="row">
        <a type="button" class="btn btn-warning" href="/Admin/Category/Edit/@Model.Id" style="width: 75px;">Edit</a>
    </div>
</div>
