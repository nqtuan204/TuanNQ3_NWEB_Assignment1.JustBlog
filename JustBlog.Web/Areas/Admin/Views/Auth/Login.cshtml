@{
    Layout = "_LogInLayout";
}

@model UserLoginViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                <div class="card-body">
                    <form method="post" action="/Admin/Auth/Login" role="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input class="form-control" asp-for="Email" type="email" placeholder="name@example.com" value="nqtuan204@gmail.com" />
                            <label for="inputEmail">Email address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input class="form-control" asp-for="Password" type="password" placeholder="Password" value="Matkhau1234!" />
                            <label for="Password">Password</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button class="btn btn-primary" type="submit">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>