@model IList<PostViewModel>

<div class="col-lg-12 mx-auto d-flex">
    <div class="col-lg-9 mx-auto" style="padding-right:20px;">
        @if (Model.Count > 0)
        {
            @foreach (var post in Model)
            {
                <div>
                    <h1 class="text-primary">
                        @Html.PostLink(post.Title, post.PostedOn.Year, post.PostedOn.Month, post.UrlSlug)
                    </h1>
                    <div>
                        @Html.CategoryLink(post.Category.Name, post.Category.UrlSlug)
                    </div>

                    <div>
                        @Html.Partial("_PopularTagsPartial", post.Tags)
                    </div>

                    <p>
                        <i>Posted @post.PostedOn.FriendlyFormat() with rate @post.Rate by @post.ViewCount view(s)</i>
                    </p>
                    <p>@Html.Raw(post.ShortDescription)</p>
                    <hr>
                </div>
            }
        }
        else
        {
            <h1>There's no posts to display!</h1>
        }
    </div>
    <div class="col-lg-3 mx-auto">
        <div id="about-card-partial-view" class="mb-5">
        </div>
        <div id="latest-posts-partial-view" class="mb-5">
            <h3>Latest posts</h3>
        </div>
        <div id="most-viewed-posts-partial-view" class="mb-5">
            <h3>Most viewed posts</h3>
        </div>
        <div id="popular-tags-partial-view" class="mb-5">
            <h3>Popular tags</h3>
        </div>
    </div>
</div>

